        name = Facundo Bianco

[core]
        editor = vim
        pager = less -RMS
        excludesfile = ~/.gitexcludes

[push]
        default = current

[alias]
        aa = add -A
        br = branch
        cb = checkout -b
        ca = commit -a
        cc = clone
        cl = clone
        c1 = clone --depth=1
        ci = commit
        co = checkout
        ls = ls-files
        lt = log -1
        mm = merge
        rh = reset HEAD
        st = status -s
        up = pull
        pu = push -u
        go = !git ca && git push -u

[color]
        ui = false
        branch = auto
        diff = auto
        status = auto

[color "branch"]
        current = brightcyan
        local = brightblue
        remote = brightgreen

[color "diff"]
        meta = normal
        frag = cyan
        old = red
        new = yellow

[color "status"]
        added = yellow
        changed = white
        untracked = cyan

[pager]
	branch = false
	diff = false
	show = false
	log = false

[credential]
	helper = store

[url "git@github.com:"]
        insteadOf = https://github.com/

[url "ssh://git@github.com/"]
        insteadOf = https://github.com/
