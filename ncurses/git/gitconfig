[user]
  name = Facundo Bianco

[include]
  path = ~/.git-envs

[core]
  editor = vim
  pager = less -RMS
  excludesfile = ~/.gitexcludes

[push]
  default = current

[alias]
  aa = add --all
  br = branch
  cb = checkout -b
  ca = commit --all
  cc = clone
  cl = clone
  c1 = clone --depth=1
  ci = commit
  co = checkout
  df = diff
  ls = ls-files
  lt = log -1
  ln = log -1 --name-only --oneline
  mm = merge
  rh = reset HEAD
  sw = show
  st = status --short
  pl = pull
  up = pull
  pu = push --set-upstream
  go = !git ca --message "Testing" && git pu

[color]
  ui = false
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = brightcyan
  local = brightblue
  remote = brightgreen

[color "diff"]
  meta = normal
  frag = cyan
  old = red
  new = yellow

[color "status"]
  added = yellow
  changed = white
  untracked = cyan

[pager]
  branch = false
  diff = false
  show = false
  log = false

[credential]
  helper = store

[url "git@github.com:"]
  insteadOf = https://github.com/

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
