# .bashrc for root

. /etc/bash.bashrc

dhcp()
{
    case ${1} in
        up)           dhcpcd -t 10 ${2} ;;
        down)         dhcpcd -k ${2} ;;
	st|status)    pgrep -fl dhcpcd ;;
        -h|--help|"") echo "dhcp <up|down> iface" ;;
        *)            echo -e "dhcp: invalid option '$1'\ndhcp -h for help" ;;
    esac
}
