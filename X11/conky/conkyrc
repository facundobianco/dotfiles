${if_up bwi0}LAN ${if_match ${upspeedf bwi0} < 100}${offset 7}${endif}${if_match ${upspeedf bwi0} < 10}${offset 7}${endif}${color0}${upspeedf bwi0}k/s${color} ${if_match ${downspeedf bwi0} < 100}${offset 7}${endif}${if_match ${downspeedf bwi0} < 10}${offset 7}${endif}${color0}${downspeedf bwi0}k/s${color} | ${endif}\
