 ${exec TEMP=`sysctl hw.sensors.cpu0.temp0 | sed 's/.*=\(.*\)\..*/\1/'` ; [ "$TEMP" -lt 100 ] && TEMP=" $TEMP" ; [ "$TEMP" -lt  10 ] && TEMP=" $TEMP" ; echo "$TEMP"}C${color} | \
