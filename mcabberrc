##################
# Mcabber config #
##################

# server
set jid = [name]@[server]
set server = [server]
set port = 5222
set tls = 1
set ssl = 0
set ssl_ignore_checks = 1

# me
set nickname = [nick]
set resource = "mcabber"
set iq_version_hide_os = 1
set hook-post-connect = status away

# spell
set spell_enable = 1
set spell_lang = es_AR
set spell_encoding = iso8859-1
set spell_encoding = UTF-8

# roster
set ignore_self_presence = 1
set roster_display_filter = ofdna
set disable_chatstates = 1
set roster_width = 30
set roster_hide_domain = 1
set buddy_format = 0

# log
set logging = 1
set load_logs = 1
set log_muc_conf = 1
set load_muc_logs = 1
set log_display_presence = 1
set log_display_sender = 0
set logging_dir = ~/.mcabber/histo/
set logging_ignore_status = 0
set tracelog_level = 1
set tracelog_file = ~/.mcabber/mcabber.log

# buffer
set statefile = ~/.mcabber/mcabber.state
set max_history_blocks = 0 
set max_history_age = 25
set cmdhistory_lines = 250
set time_prefix = 0
set show_status_in_buffer = 2

# info 
set iq_last_disable = 0
set iq_last_disable_when_notavail = 0
set iq_hide_requests = 0

# External command for events
## nones yet

# PGP 
set pgp = 1
set pgp_private_key = "[key]"

# OTR 
set otr = 1
set otr_dir = "~/.mcabber/otr"
otrpolicy default opportunistic

# Style
set color_background   = default
set color_general      = cyan
set color_info         = magenta
set color_msgin        = white
set color_msgout       = green
set color_msghl        = yellow
set color_bgstatus     = blue
set color_status       = white
set color_roster       = yellow
set color_bgrostersel  = blue
set color_rostersel    = black
set color_rosterselmsg = red
set color_rosternewmsg = red
set log_win_on_top = 1

# MUC
set muc_print_status = 2
set nick_colors = blue red cyan 
color muc * on

# Aliases
alias me = say /me
alias online   = status online
alias away     = status away
alias dnd      = status dnd
alias notavail = status notavail
alias ps = room names --short
alias pc = room names --compact
alias x = quit
alias w = room whois
alias priv = room privmsg
alias leave = room leave
alias s = roster search		

# Key bindings
# Alt-a (irssi-like)
bind M97 = roster unread_next
# F5 (269) bound to /roster toggle_offline  (centericq-like, IIRC)
bind 269 = roster toggle_offline
# Roster (irssi-like)
bind M260 = roster up
bind M261 = roster down
# Buffer (irssi-like)
bind 338 = buffer down
bind 339 = buffer up

# other
set modules_dir = /usr/lib/mcabber/
module load cmd
module load pep
module load avatar
module load -f streams ## unsupport by some jabber servers
module load si ## unsupport by some jabber servers

# module: cmd
set cmd_shell = /bin/bash
set cmd_redirect_stderr = 1
set cmd_header = 1
set cmd_header_inline = 1

# module: streams
set ibb_blocksize = 4096
set ibb_max_blocksize = 0
set ibb_min_blocksize = 64
set ibb_timeout = 60
set ibb_timeout_multiple = 1
set ibb_max_pps = 64

# module: si
set si_ft_save_dir = ~/.mcabber/si
set si_ft_autoaccept = 0

# module: avatar
set avatar_directory = ~/.mcabber/avatars
set avatar_font_height = 16
set avatar_font_width = 8
